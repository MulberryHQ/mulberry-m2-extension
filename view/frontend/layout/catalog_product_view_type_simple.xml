<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- No Custom Options -->
        <referenceContainer name="product.info.form.content">
            <block class="Mulberry\Warranty\Block\Catalog\Product\View\Warranty\Container" name="warranty.product.container.no.options" after="product.info.addtocart" template="Mulberry_Warranty::catalog/product/view/warranty/container.phtml" cacheable="false"/>
        </referenceContainer>

        <!-- With Custom Options -->
        <referenceContainer name="product.info.form.options">
            <block class="Mulberry\Warranty\Block\Catalog\Product\View\Warranty\Container" name="warranty.product.container.with.options" after="product.info.addtocart.additional" template="Mulberry_Warranty::catalog/product/view/warranty/container.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
